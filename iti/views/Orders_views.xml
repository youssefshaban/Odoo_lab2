    <!-- Top menu item -->

    <menuitem name="orders" id="orders_menu_root"/>

    <!-- menu categories -->

    <menuitem name="orders" id="orders_menu_1" parent="orders_menu_root"/>
    

    <!-- actions -->

    <menuitem name="List" id="orders_menu_1_list" parent="orders_menu_1"
              action="orders_action_window"/>


  </data>
</odoo>